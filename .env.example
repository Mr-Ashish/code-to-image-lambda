# Database Configuration
# Name of the secret in AWS Secrets Manager containing database credentials
# The secret should be a JSON object with: { host, port, database, username, password }
DB_SECRET_NAME=your-db-secret-name

# Optional: Token Cache Configuration
# Cache TTL in seconds (default: 300 = 5 minutes)
TOKEN_CACHE_TTL=300

# Optional: Database Connection Pool Configuration
# Connection pool size (default: 2)
DB_POOL_SIZE=2

# Connection timeout in milliseconds (default: 10000)
DB_CONNECTION_TIMEOUT=10000

# Idle timeout in milliseconds (default: 30000)
DB_IDLE_TIMEOUT=30000

# Enable SSL for database connection (default: false)
# Set to 'true' if your RDS instance requires SSL
DB_SSL=false
